{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "off",
    "no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "react-hooks/exhaustive-deps": "warn",
    "react/prop-types": "off",
    "react-refresh/only-export-components": "off"
  },
  "ignorePatterns": [
    "coverage/",
    "dist/",
    "*.config.js"
  ]
}
